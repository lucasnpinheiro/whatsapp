{
    "name": "lucasnpinheiro/whatsapp",
    "description": "Uma biblioteca PHP para integrar com a API do Whatsapp",
    "type": "library",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "Whatsapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Whatsapp\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas N. Pinheiro",
            "email": "lucasnpinheiro@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
